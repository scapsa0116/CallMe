<!DOCTYPE html>
<html>
  <head>
    <title>CallMe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
  
  <nav class="navbar">
    
   <% if logged_in? %>
    <%= link_to 'All Services', jobs_path %>|
    <%= link_to 'Add A Reviev', new_review_path %>|
    <%= link_to 'Log Out', logout_path, method: :delete %>|
    <% else %>
    <%= link_to 'Sign Up', signup_path %>| 
    <%= link_to 'Log In', '/signin' %>|
    <%= link_to "Log In With Google", 'auth/google_oauth2' %>
    <% end %>
    </nav>

   <% if flash[:message] %>
   <%=  flash[:message] %>
   <% end %>
   <%= @error %>
    
    <%= yield %> 
  </body>
  
</html>
